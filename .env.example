# Порт сервера
PORT=3000

# JWT секретный ключ
JWT_SECRET=your-super-secret-jwt-key-here

# Максимальный размер загружаемого файла (в байтах)
MAX_FILE_SIZE=52428800

# Режим разработки
NODE_ENV=development

# === SUPABASE CONFIGURATION ===
# Получите эти данные из настроек вашего проекта Supabase
# Dashboard → Settings → API

# URL вашего проекта Supabase
SUPABASE_URL=https://your-project-id.supabase.co

# Anon key (для клиентских операций)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service Role key (для серверных операций - СЕКРЕТНЫЙ!)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# === DATABASE SELECTION ===
# Выберите тип базы данных: 'sqlite' или 'supabase'
DATABASE_TYPE=supabase

# === LEGACY SQLITE CONFIGURATION (если используете SQLite) ===
# Путь к файлу базы данных SQLite
# DATABASE_PATH=./data/sales.db

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# Разрешенные домены для CORS (через запятую)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Railway переменные (автоматически устанавливаются)
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app

# Настройки базы данных SQLite
# DB_PATH=./data/sales.db (по умолчанию)

# Максимальный размер загружаемых файлов (в байтах)
MAX_FILE_SIZE=52428800

# Максимальное количество попыток входа
LOGIN_ATTEMPTS_LIMIT=5

# Время блокировки после превышения лимита попыток (в минутах)
LOGIN_LOCKOUT_TIME=15
